.modal
  position: fixed 0 0 0 0
  z-index: 9
  background: color(black a(65%))
  opacity: 0
  pointer-events: none
  &.blink
    animation-name: blink
    animation-duration: 1.5s
    animation-timing-function: ease-in-out
  &__wrapper
    position: relative
    height: 100%
  &__content
    position: absolute
    top: 50%
    left: 50%
    width: 400px
    padding: 25px
    transform: translate(-50%, -50%)
    box-shadow: 0 3px 10px color(black a(40%))
    background: white
    border-radius: 10px
    text-align: center
    text-transform: uppercase
    font-size: 16px
    font-weight: 600
    @media($mobile)
      width: 100%

@keyframes blink
  0%
    opacity: 0
  25%
    opacity: 1
  75%
    opacity: 1
  100%
    opacity: 0


.small-only
  display: none
  @media($mobile)
    display: table

